<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baymax_1_2x" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/sonsie_one"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="italic"
        android:text="Want to Diagnose your Symptoms? Consult WebMD"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/image_reg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/register" />

        <ImageButton
            android:id="@+id/image_log"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/login" />

        <ImageButton
            android:id="@+id/image_remind"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/reminder" />

        <ImageButton
            android:id="@+id/image_misc"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/misc" />

        <TextView
            android:id="@+id/text_register"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Register"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/text_reminder"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Reminder"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:id="@+id/text_login"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="1" />

        <TextView
            android:id="@+id/text_misc"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Emergency"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="4" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/clickWebMD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:text="Click Here"
        android:textAlignment="center"
        android:textColor="#293DB1"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>